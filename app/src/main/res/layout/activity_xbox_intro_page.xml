<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#265C00"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.uddishverma.gameapp_2.XboxIntroPage">

    <TextView
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#5C821A"
        android:onClick="goToXboxExclusive"
        android:text="XBOX EXCLUSIVE"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#739F3D"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:onClick="goToXboxAllTime"
        android:text="ALL TIME FAVOURITE"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:onClick="goToXboxAllGames"
        android:layout_height="0dp"
        android:background="#8EBA43"
        android:text="ALL GAMES"
        android:textSize="35dp"
        android:textStyle="bold"/>


</LinearLayout>
