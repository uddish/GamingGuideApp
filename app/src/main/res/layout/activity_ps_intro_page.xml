<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#1E1F26"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.uddishverma.gameapp_2.PsIntroPage">

    <TextView
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#283655"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:onClick="goToPsExclusive"
        android:text="PLAYSTATION EXCLUSIVE"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#4D648D"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:onClick="goToPsAllTime"
        android:text="ALL TIME FAVOURITE"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:onClick="goToPsAllGames"
        android:background="#D0E1F9"
        android:textColor="#000000"
        android:layout_height="0dp"
        android:text="ALL GAMES"
        android:textSize="35dp"
        android:textStyle="bold"/>


</LinearLayout>
